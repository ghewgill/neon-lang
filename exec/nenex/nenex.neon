FUNCTION f_resetc(INOUT self: Executor)
    INC self.ip
    LET addr: POINTER TO Value := self.pop()->p
    IF VALID addr THEN
        addr->p := NIL
        addr->b := FALSE
        addr->n := 0
        addr->s := ""
        addr->y := HEXBYTES ""
        addr->a := []
        addr->d := {}
        addr->ci := ClassInfo()
    ELSE
        ASSERT FALSE
    END IF
END FUNCTION

