FUNCTION f_jumptbl(INOUT self: Executor)
    INC self.ip
    LET val: Number := getVint(self.bytecode.code, INOUT self.ip)
    LET n: Number := math.trunc(self.pop()->n)
    IF 0 <= n < val THEN
        self.ip := self.ip + (6 * n)
    ELSE
        self.ip := self.ip + (6 * val)
    END IF
END FUNCTION

