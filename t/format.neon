IMPORT string

ASSERT string.format("", "5")       = "     "
ASSERT string.format("a", "5")      = "a    "
ASSERT string.format("ab", "5")     = "ab   "
ASSERT string.format("abc", "5")    = "abc  "
ASSERT string.format("abcd", "5")   = "abcd "
ASSERT string.format("abcde", "5")  = "abcde"
ASSERT string.format("abcdef", "5") = "abcdef"

ASSERT string.format("", ">5")       = "     "
ASSERT string.format("a", ">5")      = "    a"
ASSERT string.format("ab", ">5")     = "   ab"
ASSERT string.format("abc", ">5")    = "  abc"
ASSERT string.format("abcd", ">5")   = " abcd"
ASSERT string.format("abcde", ">5")  = "abcde"
ASSERT string.format("abcdef", ">5") = "abcdef"

ASSERT string.format("", "^5")       = "     "
ASSERT string.format("a", "^5")      = "  a  "
ASSERT string.format("ab", "^5")     = " ab  "
ASSERT string.format("abc", "^5")    = " abc "
ASSERT string.format("abcd", "^5")   = "abcd "
ASSERT string.format("abcde", "^5")  = "abcde"
ASSERT string.format("abcdef", "^5") = "abcdef"

ASSERT string.format("", "5.3")       = "     "
ASSERT string.format("a", "5.3")      = "a    "
ASSERT string.format("ab", "5.3")     = "ab   "
ASSERT string.format("abc", "5.3")    = "abc  "
ASSERT string.format("abcd", "5.3")   = "abc  "
ASSERT string.format("abcde", "5.3")  = "abc  "
ASSERT string.format("abcdef", "5.3") = "abc  "

ASSERT string.format("0", "4d")      = "   0"
ASSERT string.format("1", "4d")      = "   1"
ASSERT string.format("12", "4d")     = "  12"
ASSERT string.format("123", "4d")    = " 123"
ASSERT string.format("1234", "4d")   = "1234"
ASSERT string.format("12345", "4d")  = "12345"

ASSERT string.format("0", "04d")      = "0000"
ASSERT string.format("1", "04d")      = "0001"
ASSERT string.format("12", "04d")     = "0012"
ASSERT string.format("123", "04d")    = "0123"
ASSERT string.format("1234", "04d")   = "1234"
ASSERT string.format("12345", "04d")  = "12345"

ASSERT string.format("0", "4x")      = "   0"
ASSERT string.format("1", "4x")      = "   1"
ASSERT string.format("12", "4x")     = "   c"
ASSERT string.format("123", "4x")    = "  7b"
ASSERT string.format("1234", "4x")   = " 4d2"
ASSERT string.format("12345", "4x")  = "3039"
ASSERT string.format("123456", "4x") = "1e240"

ASSERT string.format("0", "04x")      = "0000"
ASSERT string.format("1", "04x")      = "0001"
ASSERT string.format("12", "04x")     = "000c"
ASSERT string.format("123", "04x")    = "007b"
ASSERT string.format("1234", "04x")   = "04d2"
ASSERT string.format("12345", "04x")  = "3039"
ASSERT string.format("123456", "04x") = "1e240"
